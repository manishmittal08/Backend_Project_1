<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-zinc-900 text-white p-6">

  <h1 class="text-3xl font-bold mb-6">My Cart</h1>
  <% if (cart.length === 0) { %>
      <p class="text-zinc-400">Your cart is empty.</p>
      <a href="/products" class="text-blue-400 underline mt-4 inline-block">Go to Products</a>
  <% } else { %>
      <div class="space-y-4">
      <% cart.forEach(item => { %>
        <div class="bg-zinc-800 p-4 rounded-lg flex justify-between items-center">
          <div>
            <h3 class="text-xl font-semibold"><%= item.product.title %></h3>
            <p class="text-zinc-400">Price: ₹<%= item.product.price %></p>
            <p class="text-zinc-400">Quantity: <%= item.quantity %></p>
          </div>
            <div class="text-right">
                <p class="font-semibold">Subtotal: ₹<%= item.product.price * item.quantity %></p>
                <div class="mt-2 flex items-center justify-end space-x-2">
                  <form action="/cart/decrease/<%= item.product._id %>" method="POST" class="inline">
                    <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded">-</button>
                  </form>
                  <span class="px-3 py-1 bg-zinc-900 border border-zinc-700 rounded text-sm"><%= item.quantity %></span>
                  <form action="/cart/increase/<%= item.product._id %>" method="POST" class="inline">
                    <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-3 py-1 rounded">+</button>
                  </form>
                </div>
            </div>
         </div>
        <% }) %>
            <h2 class="font-bold text-xl">Grand Total: ₹<%= grandTotal %></h2>
            <hr>
       </div>
    <div class="mt-6">
      <a href="/products" class="text-blue-400 underline">← Continue Shopping</a>
    </div>
  <% } %>
</body>
</html>
