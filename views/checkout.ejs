<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 text-white p-6">
    <div class="max-w-2xl">
        <div class="mb-6">
            <a href="/cart" class="text-blue-400">← Back to Cart</a>
        </div>
        
        <h1 class="text-3xl font-bold mb-6">Checkout</h1>
        
        <div class="bg-zinc-800 p-6 rounded-lg mb-6">
            <h2 class="text-2xl font-semibold mb-4">Order Summary</h2>
            <div class="border-b border-zinc-700 pb-4 mb-4">
                <p class="text-xl mb-3">Grand Total: <span class="font-bold text-yellow-400">₹<%= grandTotal %></span></p>
            </div>
            
            <% if (discount && discount.discountPercentage > 0) { %>
                <div class="bg-green-600 p-4 rounded mb-4">
                    <p class="mb-2">Automatic Discount: <span class="font-bold"><%= discount.discountPercentage %>%</span></p>
                    <p class="mb-2">Discount Amount: <span class="font-bold">₹<%= discount.discountAmount %></span></p>
                    <p class="text-2xl font-bold text-black">Final Amount: ₹<%= discount.finalAmount %></p>
                </div>
            <% } else { %>
                <div class="bg-red-600 p-4 rounded mb-4">
                    <p class="text-xl font-semibold">No automatic discount available</p>
                    <p class="text-sm text-zinc-200 mt-1">Increase your cart value to qualify for a discount</p>
                </div>
            <% } %>
        </div>
        
        <div class="bg-zinc-800 p-6 rounded-lg">
            <h3 class="text-2xl font-semibold mb-4">Delivery & Payment Details</h3>
            <form action="/checkout" method="POST" class="flex flex-col gap-4">
                <div>
                    <label class="block text-sm mb-2">Coupon Code (Optional)</label>
                    <div class="flex gap-2">
                        <input type="text" id="coupon" placeholder="Enter coupon code" class="flex-1 px-3 py-2 rounded-lg border-zinc-500 bg-zinc-900 border-2 focus:outline-none focus:border-blue-500" />
                        <button type="button" id="applyCouponBtn" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 font-semibold rounded">Apply Coupon</button>
                    </div>
                    <p id="couponMessage"></p> 
                </div>  

                <div>
                    <label class="block text-sm mb-2">Total Amount *</label>
                    <input type="number" name="totalAmount" id="totalAmount" value="<%= totalAmount %>" readonly class="w-full px-3 py-2 rounded-lg border-zinc-500 bg-zinc-900 border-2 focus:outline-none focus:border-blue-500" />
                </div>
                
                <div>
                    <label class="block text-sm mb-2 mt-2">Delivery Address *</label>
                    <input type="text" name="address" placeholder="Enter your delivery address" required class="w-full px-3 py-2 rounded-lg border-zinc-500 bg-zinc-900 border-2 focus:outline-none focus:border-blue-500" />
                </div>

                <div>
                    <label class="block text-sm mb-2 mt-2">Confirm ur Email*</label>
                    <input type="email" name="confirmEmail" value="<%= userEmail %>" placeholder="<%= userEmail %>" required class="w-full px-3 py-2 rounded-lg border-zinc-500 bg-zinc-900 border-2 focus:outline-none focus:border-blue-500" />
                </div>
                
                <div>
                    <label class="block text-sm mb-2 mt-2">Phone Number *</label>
                    <input type="tel" name="phone" placeholder="Enter your phone number" required pattern="^\+91[6-9][0-9]{9}$" class="w-full px-3 py-2 rounded-lg border-zinc-500 bg-zinc-900 border-2 focus:outline-none focus:border-blue-500" />
                </div>
                
                <button type="submit" class="bg-green-600 hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold mt-4 w-full transition">Place Order</button>
            </form>
        </div>
    </div>
    <script>
        document.getElementById("applyCouponBtn").addEventListener("click", async ()=>{
            const coupon=document.getElementById('coupon').value.trim();
            if(!coupon){
                document.getElementById('couponMessage').innerText = "Please enter a coupon code";
                document.getElementById('couponMessage').className = "text-red-400 mt-2";
                return;
            }
            console.log('Applying coupon:', coupon);
            try {
                const response=await fetch("/apply-coupon",{
                    method: 'POST',
                    headers: { 
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({coupon})
                });
                console.log('Apply coupon response status:', response.status);
                const data=await response.json();
                console.log('Apply coupon response JSON:', data);
                const messageElement=document.getElementById('couponMessage');
                const totalAmount=document.getElementById('totalAmount');
                if(data.success){
                    messageElement.innerText = data.message;
                    messageElement.className = "text-green-400 mt-2";
                    totalAmount.value = data.totalAmount;
                }else{
                    messageElement.innerText = data.message;
                    messageElement.className = "text-red-400 mt-2";
                }
            } catch (error) {
                console.error("Error:", error);
                document.getElementById('couponMessage').innerText = "Error applying coupon. Check console.";
                document.getElementById('couponMessage').className = "text-red-400 mt-2";
            }
        });    
    </script>
</body>
</html>